<Window x:Class="APKRepackageSDKTool.UI.SdkEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:APKRepackageSDKTool.UI"
        mc:Ignorable="d"
        Title="{Binding Path=SdkName}" Height="447" Width="713">
    <Grid>
        <!-- Label 显示下划线 开始 -->
        <Grid.Resources>
            <Style TargetType="Label">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Label">
                            <Border Padding="{TemplateBinding Padding}">
                                <ContentPresenter RecognizesAccessKey="False"></ContentPresenter>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </Grid.Resources>
        <!-- Label 显示下划线 结束 -->
        <TabControl Margin="10,10,10,34">
            <TabItem Header="常规设置">
                <Grid Background="#FFF9F9F9">
                    <Label Content="Java类名" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
                    <TextBox Height="23" Margin="94,12,10,0" TextWrapping="Wrap" Text="{Binding Path=ClassName,Mode=TwoWay}" VerticalAlignment="Top"/>
                    <Label Content="SDK类型" HorizontalAlignment="Left" Margin="10,73,0,0" VerticalAlignment="Top"/>
                    <ListBox x:Name="ListBox_SDKType" Margin="94,73,10,106">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <CheckBox Content="{Binding Path=Name}" IsChecked="{Binding Path=IsChick}" Checked="CheckBox_Checked" Unchecked="CheckBox_Checked"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <Label Content="SDKName" HorizontalAlignment="Left" Margin="10,35,0,0" VerticalAlignment="Top"/>
                    <TextBox Height="23" Margin="94,40,10,0" TextWrapping="Wrap" Text="{Binding SdkName, Mode=TwoWay}" VerticalAlignment="Top"/>
                    <Button x:Name="Button_InputAAR" Content="从AAR导入" Margin="94,0,0,82" Height="19" VerticalAlignment="Bottom" Click="Button_InputAAR_Click" HorizontalAlignment="Left" Width="138"/>
                    <Button x:Name="Button_InputAARGroup" Content="批量导入AAR" Margin="243,0,0,82" Height="19" VerticalAlignment="Bottom" Click="Button_InputAARGroup_Click" HorizontalAlignment="Left" Width="138"/>
                    <Button x:Name="Button_GenerateRTable" Content="导入R表" Margin="386,0,0,82" Height="19" VerticalAlignment="Bottom" Click="Button_GenerateRTable_Click" HorizontalAlignment="Left" Width="138"/>
                    <Button x:Name="Button_GenerateRTableGroup" Content="批量导入R表" Margin="529,0,0,82" Height="19" VerticalAlignment="Bottom" Click="Button_GenerateRTableGroup_Click" HorizontalAlignment="Left" Width="138"/>

                    <CheckBox x:Name="CheckBox_ConvertAndroidX" Content="转换为AndroidX" HorizontalAlignment="Left" Margin="94,0,0,59" VerticalAlignment="Bottom"/>
                    <Button x:Name="Button_BatchConvertAndroid" Content="批量转换Androidx" Margin="386,0,0,59" Click="Button_BatchConvertAndroid_Click" Height="19" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="138"/>
                    <Button x:Name="Button_ConvertAndroid" Content="转换Androidx" Margin="243,0,0,58" Click="Button_ConvertAndroid_Click" Height="19" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="138"/>

                </Grid>
            </TabItem>
            <TabItem Header="字段设置">
                <Grid Background="#FFF9F9F9">
                    <ListBox x:Name="ListBox_ConfigList" Margin="10,40,10,34" Grid.ColumnSpan="3">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid >
                                    <Label Content="{Binding Path=Key}" MinWidth="200" HorizontalAlignment="Left" />
                                    <TextBox Text="{Binding Path=Value}" MinWidth="200" HorizontalAlignment="Right" Margin="150,0,50,0" />
                                    <Button Content="删除" HorizontalAlignment="Right" MinWidth="40" Tag="{Binding Path=Key}" Click="Button_ClickDelete"/>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <Button Content="新增" Margin="0,0,10,10" Height="19" VerticalAlignment="Bottom" Click="Button_ClickAddConfigKey" HorizontalAlignment="Right" Width="75" Grid.Column="2" />
                    <TextBox x:Name="TextBox_ConfigName" Margin="10,0,90,5" TextWrapping="Wrap" Text="" Height="23" VerticalAlignment="Bottom" Grid.ColumnSpan="3" />
                    <Label Content="Value不填则留给渠道设置，填了则作为默认值使用" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="340" Grid.ColumnSpan="3"/>
                </Grid>
            </TabItem>
            <TabItem Header="权限设置">
                <Grid Background="#FFF9F9F9">
                    <ListBox x:Name="ListBox_PermissionList" Margin="10,10,10,34">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="{x:Type ListBoxItem}">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid >
                                    <Label Content="{Binding Path=.}"  HorizontalAlignment="Stretch" Margin="0,0,50,0" />
                                    <Button Content="删除" HorizontalAlignment="Right" MinWidth="40" Tag="{Binding Path=.}" Click="Button_ClickDeletePermission"/>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <Button Content="新增" Margin="0,0,10,10" Height="19" VerticalAlignment="Bottom" Click="Button_ClickAddPermission" HorizontalAlignment="Right" Width="75" />
                    <TextBox x:Name="TextBox_PermissionName" Margin="10,0,90,5" TextWrapping="Wrap" Text="" Height="23" VerticalAlignment="Bottom" />
                </Grid>
            </TabItem>
            <TabItem Header="Activity设置">
                <Grid Background="#FFF9F9F9" Margin="0,-1,0,1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="25*" />
                        <ColumnDefinition Width="5" />
                        <ColumnDefinition Width="50*" />
                    </Grid.ColumnDefinitions>
                    <GridSplitter  Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Margin="0,-10,0,10" />

                    <Grid>
                        <ListBox x:Name="ListBox_ActivtyList" Margin="10,10,10,36" SelectedValuePath="Name" SelectionChanged="ListBox_ActivtyList_SelectionChanged">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                </Style>
                            </ListBox.ItemContainerStyle>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid >
                                        <Label Content="{Binding Path=Name}"  HorizontalAlignment="Left" />
                                        <Button Content="删除" HorizontalAlignment="Right" MinWidth="40" Tag="{Binding Path=Name}" Click="Button_ClickDeleteActivity"/>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                        <Button Content="新增" Margin="0,0,10,4" VerticalAlignment="Bottom" Click="Button_ClickAddActivity" HorizontalAlignment="Right" Width="75"/>
                        <TextBox x:Name="TextBox_ActivityName" Margin="10,0,90,4" TextWrapping="NoWrap" Text="" Height="23" VerticalAlignment="Bottom"/>
                    </Grid>
                    <Grid Grid.Column="2">
                        <TextBox x:Name="TextBox_ActivityContent" Margin="10,30,10,10" TextWrapping="Wrap" Text="{Binding Path=Content}"  VerticalScrollBarVisibility="Auto" AcceptsReturn="True" TextChanged="TextBox_ActivityContent_TextChanged" IsEnabled="False" />
                        <CheckBox x:Name="CheckBox_main" Content="主Activity" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Checked="CheckBox_main_Checked" Unchecked="CheckBox_main_Unchecked"/>
                        <Button Content="说明" Margin="0,6,10,0" Click="Button_ClickInfo" Height="19" VerticalAlignment="Top" HorizontalAlignment="Right" Width="75"/>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Header="主Activity设置">
                <Grid Background="#FFF9F9F9">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="25*" />
                        <ColumnDefinition Width="5" />
                        <ColumnDefinition Width="50*" />
                    </Grid.ColumnDefinitions>
                    <GridSplitter  Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Margin="0,-10,0,10" />
                    <Grid Grid.ColumnSpan="2">
                        <ListBox x:Name="ListBox_mainPropertyList" Margin="10,10,10,36" SelectedValuePath="Key" SelectionChanged="ListBox_MainActivityPropertyList_SelectionChanged">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                </Style>
                            </ListBox.ItemContainerStyle>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid >
                                        <Label Content="{Binding Path=Key}"  HorizontalAlignment="Left" />
                                        <Button Content="删除" HorizontalAlignment="Right" MinWidth="40" Tag="{Binding Path=Key}" Click="Button_ClickDeleteMainActivityProperty"/>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                        <Button Content="新增" Margin="0,0,20,6" Click="Button_ClickAddMainActivityProperty" Height="19" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75"/>
                        <TextBox x:Name="TextBox_mainPropertyName" Margin="10,0,100,4" TextWrapping="NoWrap" Text="" Height="23" VerticalAlignment="Bottom"/>
                    </Grid>
                    <Grid  Grid.Column="2">
                        <TextBox x:Name="TextBox_mainPropertyContent" Margin="10,34,10,10" TextWrapping="Wrap" TextChanged="TextBox_MainActivityPropertyContent_TextChanged"  VerticalScrollBarVisibility="Auto" AcceptsReturn="True" IsEnabled="False"/>
                        <Button Content="说明" HorizontalAlignment="Left" Margin="364,10,0,0" VerticalAlignment="Top" Width="75" Click="Button_MianActivityInfo_Click"/>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Header="Service设置">
                <Grid Background="#FFF9F9F9">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="25*" />
                        <ColumnDefinition Width="5" />
                        <ColumnDefinition Width="50*" />
                    </Grid.ColumnDefinitions>
                    <GridSplitter  Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Margin="0,-10,0,10" />
                    <Grid Grid.ColumnSpan="2" Margin="0,0,0,0">
                        <ListBox x:Name="ListBox_serviceList"  SelectedValuePath="Name" SelectionChanged="ListBox_ServiceList_SelectionChanged" Margin="10,10,10,32">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                </Style>
                            </ListBox.ItemContainerStyle>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid >
                                        <Label Content="{Binding Path=Name}" HorizontalAlignment="Left" />
                                        <Button Content="删除" HorizontalAlignment="Right" MinWidth="40" Tag="{Binding Path=Name}" Click="Button_ClickDeleteService"/>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                        <Button Content="新增" Margin="0,0,10,4" Click="Button_ClickAddService" Height="19" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75"/>
                        <TextBox x:Name="TextBox_serviceName" Margin="10,0,90,4" TextWrapping="NoWrap" Text="" Height="23" VerticalAlignment="Bottom"/>

                    </Grid>
                    <Grid Grid.Column="2">
                        <TextBox x:Name="TextBox_serviceContent" Margin="10" TextWrapping="Wrap" TextChanged="TextBox_serviceContent_TextChanged"  VerticalScrollBarVisibility="Auto" AcceptsReturn="True" IsEnabled="False"/>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Header="Provider设置">
                <Grid Background="#FFF9F9F9">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="25*" />
                        <ColumnDefinition Width="5" />
                        <ColumnDefinition Width="50*" />
                    </Grid.ColumnDefinitions>
                    <GridSplitter  Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Margin="0,-10,0,10" />

                    <Grid Grid.ColumnSpan="2" Margin="0,0,0,0">
                        <ListBox x:Name="ListBox_ProviderList" Margin="10,10,10,36" SelectedValuePath="Name" SelectionChanged="ListBox_ProviderList_SelectionChanged">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                </Style>
                            </ListBox.ItemContainerStyle>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid >
                                        <Label Content="{Binding Path=Name}" HorizontalAlignment="Left" />
                                        <Button Content="删除" HorizontalAlignment="Right" MinWidth="40" Tag="{Binding Path=Name}" Click="Button_ClickDeleteProvider"/>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                        <Button Content="新增" Margin="0,0,10,4" VerticalAlignment="Bottom" Click="Button_ClickAddProvider" HorizontalAlignment="Right" Width="75"/>
                        <TextBox x:Name="TextBox_ProviderName" Margin="10,0,90,4" TextWrapping="NoWrap" Text="" Height="23" VerticalAlignment="Bottom"/>

                    </Grid>

                    <Grid Grid.Column="2">
                        <TextBox x:Name="TextBox_ProviderContent" Margin="10,30,10,10" TextWrapping="Wrap" Text="{Binding Path=Content}"  VerticalScrollBarVisibility="Auto" AcceptsReturn="True" TextChanged="TextBox_ProviderContent_TextChanged" />
                        <Button Content="说明" Margin="0,6,10,0" Click="Button_ClickInfo" Height="19" VerticalAlignment="Top" HorizontalAlignment="Right" Width="75"/>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Header="Meta设置">
                <Grid Background="#FFF9F9F9">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="25*" />
                        <ColumnDefinition Width="5" />
                        <ColumnDefinition Width="50*" />
                    </Grid.ColumnDefinitions>
                    <GridSplitter  Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Margin="0,-10,0,10" />
                    <Grid Grid.ColumnSpan="2">
                        <ListBox x:Name="ListBox_MetaList" Margin="10,10,10,36" SelectedValuePath="Key" SelectionChanged="ListBox_MetaList_SelectionChanged">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                </Style>
                            </ListBox.ItemContainerStyle>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid >
                                        <Label Content="{Binding Path=Key}" Width="140" HorizontalAlignment="Left" />
                                        <Button Content="删除" HorizontalAlignment="Right" MinWidth="40" Tag="{Binding Path=Key}" Click="Button_ClickDeleteMeta"/>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                        <Button Content="新增" Margin="0,0,10,4" VerticalAlignment="Bottom" Click="Button_ClickAddMeta" HorizontalAlignment="Right" Width="75"/>
                        <TextBox x:Name="TextBox_MetaName" Margin="10,0,90,4" TextWrapping="NoWrap" Text="" Height="23" VerticalAlignment="Bottom"/>

                    </Grid>
                    <Grid Grid.Column="2">
                        <TextBox x:Name="TextBox_MetaContent" Margin="10,30,10,10" TextWrapping="Wrap" Text="{Binding Path=Content}"  VerticalScrollBarVisibility="Auto" AcceptsReturn="True" TextChanged="TextBox_MetaContent_TextChanged" IsEnabled="False" />
                        <Button Content="说明" Margin="0,6,10,0" Click="Button_ClickInfo" Height="19" VerticalAlignment="Top" HorizontalAlignment="Right" Width="75"/>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Header="Manifest头设置">
                <Grid Background="#FFF9F9F9">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="25*" />
                        <ColumnDefinition Width="5" />
                        <ColumnDefinition Width="50*" />
                    </Grid.ColumnDefinitions>
                    <GridSplitter  Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Margin="0,-10,0,10" />
                    <Grid Grid.ColumnSpan="2" Margin="0,0,0,0">
                        <ListBox x:Name="ListBox_ManifestHeadList" Margin="10,10,10,36" SelectedValuePath="Key" SelectionChanged="ListBox_ManifestHeadList_SelectionChanged">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                </Style>
                            </ListBox.ItemContainerStyle>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid >
                                        <Label Content="{Binding Path=Key}" Width="140" HorizontalAlignment="Left" />
                                        <Button Content="删除" HorizontalAlignment="Right" MinWidth="40" Tag="{Binding Path=Key}" Click="Button_ClickDeleteManifestHead"/>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                        <Button Content="新增" Margin="0,0,10,4" VerticalAlignment="Bottom" Click="Button_ClickAddManifestHead" HorizontalAlignment="Right" Width="75"/>
                        <TextBox x:Name="TextBox_ManifestHeadName" Margin="10,0,90,4" TextWrapping="NoWrap" Text="" Height="23" VerticalAlignment="Bottom"/>

                    </Grid>
                    <Grid Grid.Column="2">
                        <TextBox x:Name="TextBox_ManifestHeadContent" Margin="10,30,10,10" TextWrapping="Wrap" Text="{Binding Path=Content}"  VerticalScrollBarVisibility="Auto" AcceptsReturn="True" TextChanged="TextBox_ManifestHeadContent_TextChanged" IsEnabled="False" />
                        <Button Content="说明" Margin="0,6,10,0" Click="Button_ClickInfo" Height="19" VerticalAlignment="Top" HorizontalAlignment="Right" Width="75"/>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Header="Application 设置">
                <Grid Background="#FFF9F9F9">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="25*" />
                        <ColumnDefinition Width="5" />
                        <ColumnDefinition Width="50*" />
                    </Grid.ColumnDefinitions>
                    <GridSplitter  Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Margin="0,-10,0,10" />
                    <Grid >
                        <ListBox x:Name="ListBox_ApplicationHeadList" Margin="10,10,10,36" SelectedValuePath="Key" SelectionChanged="ListBox_ApplicationHeadList_SelectionChanged">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                </Style>
                            </ListBox.ItemContainerStyle>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid >
                                        <Label Content="{Binding Path=Key}" Width="140" HorizontalAlignment="Left" />
                                        <Button Content="删除" HorizontalAlignment="Right" MinWidth="40" Tag="{Binding Path=Key}" Click="Button_ClickDeleteApplicationHead"/>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                        <Button Content="新增" Margin="0,0,10,4" VerticalAlignment="Bottom" Click="Button_ClickAddApplicationHead" HorizontalAlignment="Right" Width="75"/>
                        <TextBox x:Name="TextBox_ApplicationHeadName" Margin="10,0,90,4" TextWrapping="NoWrap" Text="" Height="23" VerticalAlignment="Bottom"/>

                    </Grid>
                    <Grid Grid.Column="2">
                        <TextBox x:Name="TextBox_ApplicationHeadContent" Margin="10,30,10,10" TextWrapping="Wrap" Text="{Binding Path=Content}"  VerticalScrollBarVisibility="Auto" AcceptsReturn="True" TextChanged="TextBox_ApplicationHeadContent_TextChanged" IsEnabled="False" />
                        <Button Content="说明" Margin="0,6,10,0" Click="Button_ClickInfo" Height="19" VerticalAlignment="Top" HorizontalAlignment="Right" Width="75"/>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Header="Uses设置">
                <Grid Background="#FFF9F9F9">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="25*" />
                        <ColumnDefinition Width="5" />
                        <ColumnDefinition Width="50*" />
                    </Grid.ColumnDefinitions>
                    <GridSplitter  Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Margin="0,-10,0,10" />
                    <Grid Grid.ColumnSpan="2" Margin="0,0,0,0">
                        <ListBox x:Name="ListBox_UsesList" Margin="10,10,10,36" SelectedValuePath="Key" SelectionChanged="ListBox_UsesList_SelectionChanged">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                </Style>
                            </ListBox.ItemContainerStyle>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid >
                                        <Label Content="{Binding Path=Key}" Width="140" HorizontalAlignment="Left" />
                                        <Button Content="删除" HorizontalAlignment="Right" MinWidth="40" Tag="{Binding Path=Key}" Click="Button_ClickDeleteUsesHead"/>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                        <Button Content="新增" Margin="0,0,10,4" VerticalAlignment="Bottom" Click="Button_ClickAddUsesHead" HorizontalAlignment="Right" Width="75"/>
                        <TextBox x:Name="TextBox_UsesName" Margin="10,0,90,4" TextWrapping="NoWrap" Text="" Height="23" VerticalAlignment="Bottom"/>

                    </Grid>
                    <Grid Grid.Column="2">
                        <TextBox x:Name="TextBox_UsesContent" Margin="10,30,10,10" TextWrapping="Wrap" Text="{Binding Path=Content}"  VerticalScrollBarVisibility="Auto" AcceptsReturn="True" TextChanged="TextBox_UsesContent_TextChanged" IsEnabled="False" />
                        <Button Content="说明" Margin="0,6,10,0" Click="Button_ClickInfo" Height="19" VerticalAlignment="Top" HorizontalAlignment="Right" Width="75"/>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Header="自编译Java">
                <Grid>
                    <CheckBox x:Name="CheckBox_customJavaClass" IsChecked="{Binding Path=UseCustomJavaClass, Mode=TwoWay}" Content="自编译JavaClass" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Unchecked="CheckBox_customJavaClass_checked" Checked="CheckBox_customJavaClass_checked" RenderTransformOrigin="-1.789,-1.333"/>
                    <Grid x:Name="Grid_customJava" Margin="0,30,0,0" >
                        <TextBox x:Name="TextBox_ClassTemplate" Text="{Binding Path=ClassContent}" Margin="420,0,10,10" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Visible" TextChanged="TextBox_ClassTemplate_TextChanged" />
                        <ListBox x:Name="ListBox_CustomLibrary" Margin="10,0,0,36" HorizontalAlignment="Left" Width="200">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                </Style>
                            </ListBox.ItemContainerStyle>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid >
                                        <Label Content="{Binding Path=.}"  HorizontalAlignment="Left" Margin="0,0,45,0" />
                                        <Button Content="删除" HorizontalAlignment="Right" MinWidth="40" Tag="{Binding Path=.}" Click="Button_CustomJavaLibrary_Delete"/>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                        <ListBox x:Name="ListBox_CustomJava" Margin="215,0,0,36" HorizontalAlignment="Left" Width="200" SelectedValuePath="Key" SelectionChanged="ListBox_CustomJava_SelectionChanged">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                </Style>
                            </ListBox.ItemContainerStyle>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid >
                                        <Label Content="{Binding Path=Key}"  HorizontalAlignment="Left" Margin="0,0,45,0" />
                                        <Button Content="删除" HorizontalAlignment="Right" MinWidth="40" Tag="{Binding Path=Key}" Click="Button_addCustomJava_Delete"/>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                        <TextBox x:Name="TextBox_customJavaName" HorizontalAlignment="Left" Margin="215,0,0,14" TextWrapping="Wrap" Text="" Width="141" Height="19" VerticalAlignment="Bottom"/>
                        <Button x:Name="Button_addCustomJava" Content="新增" HorizontalAlignment="Left" Margin="361,0,0,12" Width="54" RenderTransformOrigin="2.567,0.571" Click="Button_addCustomJava_Click" Height="21" VerticalAlignment="Bottom" />
                        <Button x:Name="Button_addCustomJavaLibrary" Content="浏览" HorizontalAlignment="Left" Margin="135,0,0,12" Width="75" Click="Button_addCustomJavaLibrary_Click" Height="19" VerticalAlignment="Bottom" />
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Header="首Dex设置">
                <Grid Background="#FFF9F9F9">
                    <ListBox x:Name="ListBox_FirstDexList" Margin="10,41,10,34">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="{x:Type ListBoxItem}">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid >
                                    <Label Content="{Binding Path=.}"  HorizontalAlignment="Stretch" Margin="0,0,50,0" />
                                    <Button Content="删除" HorizontalAlignment="Right" MinWidth="40" Tag="{Binding Path=.}" Click="Button_ClickDeleteFirstDex"/>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <Button Content="新增" Margin="0,0,10,10" Height="19" VerticalAlignment="Bottom" Click="Button_ClickAddFirstDex" HorizontalAlignment="Right" Width="75" />
                    <TextBox x:Name="TextBox_FirstDexName" Margin="10,0,90,5" TextWrapping="Wrap" Text="" Height="23" VerticalAlignment="Bottom" />
                    <Label Content="java包名包含下列字符串的会被放在第一个Dex包中" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="659"/>
                </Grid>
            </TabItem>
            <TabItem Header="其他设置">
